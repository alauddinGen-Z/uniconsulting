{
    "name": "uniconsulting-desktop",
    "version": "1.0.0",
    "description": "UniConsulting Desktop - Thin Client with Python Automation",
    "main": "main.js",
    "author": "UniConsulting Team",
    "license": "MIT",
    "homepage": "https://uniconsulting.netlify.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/alauddinGen-Z/uniconsulting.git"
    },
    "scripts": {
        "start": "electron .",
        "dev": "set ELECTRON_DEV=true && electron .",
        "build": "electron-builder",
        "build-python": "node build-engine.js",
        "dist": "npm run build-python && npm run build",
        "dist:win": "npm run build-python && electron-builder --win"
    },
    "dependencies": {
        "electron-is-dev": "^3.0.1"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.uniconsulting.desktop",
        "productName": "UniConsulting",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "main.js",
            "preload.js"
        ],
        "extraResources": [
            {
                "from": "python/dist/engine",
                "to": "engine",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": true,
            "installerHeaderIcon": "assets/icon.ico"
        },
        "publish": {
            "provider": "github",
            "owner": "alauddinGen-Z",
            "repo": "uniconsulting"
        }
    }
}