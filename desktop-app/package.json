{
    "name": "uniconsulting-desktop",
    "version": "1.0.0",
    "description": "UniConsulting Desktop - AI-Powered University Application Assistant",
    "main": "main.js",
    "author": "UniConsulting Team",
    "license": "MIT",
    "homepage": "https://uniconsulting.netlify.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/alauddinGen-Z/uniconsulting.git"
    },
    "scripts": {
        "start": "electron .",
        "dev": "set ELECTRON_DEV=true && electron .",
        "clean": "rimraf dist-react dist",
        "build": "electron-builder",
        "build-python": "node build-engine.js",
        "build-automation": "cd automation-service && ..\\automation-service\\venv\\Scripts\\python.exe build_automation.py",
        "download-python": "node scripts/download-python.js",
        "build-react": "cd src && npx tsc -b && npx vite build",
        "verify:build": "node -e \"const fs=require('fs'); if(!fs.existsSync('./dist-react/index.html')) { console.error('❌ FATAL: dist-react/index.html missing!'); process.exit(1); } else { console.log('✅ VERIFIED: Vite build successful'); }\"",
        "build-frontend": "cd .. && npm run build:export && xcopy /E /I /Y out ..\\desktop-app\\frontend",
        "dist": "npm run build-python && npm run build",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux",
        "build:student": "npm run clean && npm run build-react && npm run verify:build && electron-builder -c electron-builder-student.yml --win",
        "build:teacher": "npm run clean && npm run download-python && npm run build-python && npm run build-automation && npm run build-react && npm run verify:build && electron-builder -c electron-builder-teacher.yml --win"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "electron-icon-builder": "^2.0.1",
        "rimraf": "^6.1.2"
    },
    "build": {
        "appId": "com.uniconsulting.desktop",
        "productName": "UniConsulting",
        "copyright": "Copyright © 2024 UniConsulting",
        "asar": false,
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "main.js",
            "preload.js",
            "splash.html",
            "index.html",
            "dist-react/**/*"
        ],
        "extraResources": [
            {
                "from": "python/dist/engine",
                "to": "engine",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "protocols": [
            {
                "name": "UniConsulting",
                "schemes": [
                    "uniconsulting"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "allowElevation": true,
            "installerIcon": "assets/icon.ico",
            "uninstallerIcon": "assets/icon.ico",
            "installerHeaderIcon": "assets/icon.ico",
            "createDesktopShortcut": "always",
            "createStartMenuShortcut": true,
            "shortcutName": "UniConsulting",
            "menuCategory": "UniConsulting",
            "runAfterFinish": true
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns",
            "category": "public.app-category.education"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png",
            "category": "Education"
        },
        "publish": {
            "provider": "github",
            "owner": "alauddinGen-Z",
            "repo": "uniconsulting"
        }
    }
}